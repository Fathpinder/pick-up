<section>
    <div class="min-h-full flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-5 text-center text-4xl font-bold text-white">Add Park</h2>
            </div>
            <form class="mt-8 space-y-6 new-park-form" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        <label for="park-name" class="sr-only">Park Name</label>
                        <input id="park-name" name="park-name" type="text" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Park Name">
                    </div>
                    <div>
                        <label for="park-location" class="sr-only">Location</label>
                        <input id="park-location" name="park-location" type="text" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Location">
                    </div>
                    <div>
                        <label for="park-activities" class="sr-only">Activities, separated by commas</label>
                        <input id="park-activities" name="park-activites" type="text" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                            placeholder="Activities">
                    </div>
                </div>

                <div>
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-orange-500 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <!-- Heroicon name: solid/lock-closed -->
                            {{!-- <svg class="h-5 w-5 text-orange-500 group-hover:text-orange-400"
                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                aria-hidden="true">
                                <path fill-rule="evenodd"
                                    d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                    clip-rule="evenodd" />
                            </svg> --}}
                        </span>
                        Add Park
                    </button>
                </div>
            </form>
        </div>
    </div>
    <section>
        <div class="min-h-full flex items-center justify-center pb-4 px-4 sm:px-6 lg:px-8">
            <div class="max-w-md w-full space-y-8">
                <div>
                    <h2 class="mt-5 text-center text-4xl font-bold text-white">Add Event</h2>
                </div>
                <form class="mt-8 space-y-6" id="new-event-form" action="#" method="POST">
                    <input type="hidden" name="remember" value="true">
                    <div class="rounded-md shadow-sm -space-y-px">
                        <div>
                            <label for="event-name" class="sr-only">Event Title</label>
                            <input id="event-name" name="event-name" type="text" required
                                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                placeholder="Event Title">
                        </div>
                        <div>
                            <label for="event-location" class="sr-only">Park ID</label>
                            <input id="event-location" name="event-location" type="text" required
                                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                placeholder="Park ID">
                        </div>
                        <div>
                            <label for="user" class="sr-only">User ID</label>
                            <input id="user" name="user" type="text" required
                                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                placeholder="Your User ID">
                        </div>
                        <div>
                            <label for="event-activities" class="sr-only">Description</label>
                            <input id="event-activities" placeholder="Description" name="event-activities" type="text" required
                                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                placeholder="Event Activities">
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-orange-500 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            {{!-- <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <!-- Heroicon name: solid/lock-closed -->
                                <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400"
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                    aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                        clip-rule="evenodd" />
                                </svg>
                            </span> --}}
                            Create Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <div class="border-t mx-28 mb-6 mt-10 rounded">
        <h2 class="park-list flex items-center justify-center mt-8 mb-4 text-4xl font-bold">Parks</h2>
    <ol class="park-list flex flex-wrap items-center justify-center text-xl">
        {{#each parks as |park|}}
        <li class="my-4 border-l border-r px-8">
            {{> park-info park }}
        </li>
        {{/each}}
    </ol>
    </div>
    <script src="/javascript/add-park.js"></script>
    <script src="/javascript/add-event.js"></script>
</section>